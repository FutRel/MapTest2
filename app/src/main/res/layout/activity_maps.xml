<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_height="match_parent"
                tools:context=".MapActivity"
                app:mapType="hybrid">
    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context=".MapActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
    />
    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/biruze"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="me"
            android:textSize="13sp"
            android:onClick="onClick"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            app:cornerRadius="50dp"
            android:layout_marginTop="5dp"
    />
    <com.google.android.material.button.MaterialButton
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:id="@+id/plus"
            android:onClick="onClickplus"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/minus"
            android:backgroundTint="@color/biruze"
            app:cornerRadius="50dp"

    />
    <com.google.android.material.button.MaterialButton
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="-"
            android:textSize="20sp"
            android:id="@+id/minus"
            android:onClick="onClickminus"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/biruze"
            app:cornerRadius="50dp"
    />
    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/biruze"
            android:layout_width="112dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="follow"
            android:textSize="13sp"
            android:id="@+id/follow"
            android:onClick="follow"
            android:layout_alignParentRight="true"
            app:cornerRadius="56dp"
            android:layout_above="@+id/linear"

    />

    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/biruze"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="change"
            android:textSize="13sp"
            android:onClick="change"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            app:cornerRadius="56dp"
            android:layout_marginLeft="@android:dimen/app_icon_size"
            android:layout_marginTop="5dp"
    />
    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/orange"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="resume"
            android:textSize="13sp"
            android:id="@+id/pauseOrResume"
            android:onClick="pauseOrResume"
            app:cornerRadius="56dp"
            android:layout_above="@+id/linear"
            android:layout_centerHorizontal="true"
    />

    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/design_default_color_error"
            android:layout_width="112dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="stop"
            android:textSize="13sp"
            android:id="@+id/stop"
            android:layout_alignParentRight="false"
            app:cornerRadius="56dp"
            android:layout_above="@+id/linear"
    />

    <LinearLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/linear"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="zero"
                android:id="@+id/distanse"
                android:textColor="@color/white"
                android:layout_marginLeft="25dp"
                android:gravity="center"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/white"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/white"
        />

    </LinearLayout>

</RelativeLayout>