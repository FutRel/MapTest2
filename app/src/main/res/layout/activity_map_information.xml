<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_height="match_parent"
                app:mapType="hybrid">

    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context=".MapInformationActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
    />
    <com.google.android.material.button.MaterialButton
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:onClick="plus"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey_white"
            android:id="@+id/plus"
            app:cornerRadius="10dp"
    />
    <com.google.android.material.button.MaterialButton
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="-"
            android:textSize="20sp"
            android:id="@+id/min"
            android:onClick="minus"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey_white"
            app:cornerRadius="10dp"
            android:layout_below="@+id/plus"
    />
    <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/biruze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=">"
            android:textSize="13sp"
            android:onClick="back"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:cornerRadius="56dp"
    />

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg_grey"
            android:layout_alignParentBottom="true"
    >
        <TextView
                android:text="dist"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dist_inf"
                android:textColor="@color/biruze"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="5dp"
        />

        <TextView
                android:text="time"
                android:textSize="25sp"
                android:id="@+id/time_inf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dist_inf"
                android:textColor="@color/biruze"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="5dp"
        />

        <TextView
                android:text="avspeed"
                android:textSize="25sp"
                android:id="@+id/avspeed_inf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_inf"
                android:textColor="@color/biruze"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="5dp"
        />
    </RelativeLayout>

    <TextView
            android:text="date"
            android:textSize="22sp"
            android:id="@+id/date_inf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textStyle="italic"
            android:shadowColor="@color/black"
            android:textColor="@color/biruze"
            android:shadowRadius="2"
            android:background="@drawable/layout_bg_grey"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
    />

</RelativeLayout>